---
import BaseLayout from './BaseLayout.astro'

const {frontmatter} = Astro.props
---
<BaseLayout pageTitle={frontmatter.title}>
    <p>Written by {frontmatter.author}</p>
    <p>Published on: {frontmatter.pubDate.slice(0,10)}</p>
    <p>Description: <em>{frontmatter.description}</em></p>
    <img src={frontmatter.image.url} alt={frontmatter.image.alt} width="300">

    <div class="tags">
        {frontmatter.tags.map((tag) => (
            <p class="tag"><a href={`/learning_astro/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>
    
    <hr>
    <slot />
</BaseLayout>

